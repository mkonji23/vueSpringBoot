<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ds.mapper.userInfoMapper">

	<select id="getUserInfoList" resultType="CamelMap">
		SELECT *
		FROM YH_USER_MST
	</select>
	
	<select id="getUserInfo" resultType="com.ds.vo.userInfoVO">
		SELECT *
		FROM YH_USER_MST
		WHERE USER_ID = #{userId}
	</select>
	
	<insert id="registUserInfo" parameterType="com.ds.vo.userInfoVO">
	INSERT INTO YH_USER_MST(
			USER_ID,
			PASSWORD,
			NAME,
			ADDRESS
		)
		VALUES
		(
			 #{userId},
			 #{password},
			 #{name},
			 #{address}
	    );
	</insert>
	
	<select id="loginUser" parameterType="java.util.Map"  resultType="CamelMap">
			SELECT *
			FROM YH_USER_MST
			WHERE USER_ID = #{userId}
	</select>
</mapper>